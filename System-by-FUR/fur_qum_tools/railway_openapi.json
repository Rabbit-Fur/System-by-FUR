{
  "openapi": "3.1.0",
  "info": {
    "title": "Railway Deployment API",
    "version": "1.0.0",
    "description": "Zugriff auf Railway-Projekte, Deployments, Logs und Umgebungsvariablen"
  },
  "servers": [
    {
      "url": "https://backboard.railway.app/api/v1"
    }
  ],
  "paths": {
    "/projects": {
      "get": {
        "operationId": "getProjects",
        "summary": "Listet alle Railway-Projekte auf",
        "responses": {
          "200": {
            "description": "Erfolgreich",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "name": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/projects/{projectId}/deployments": {
      "get": {
        "operationId": "getDeployments",
        "summary": "Listet alle Deployments f端r ein Projekt",
        "parameters": [
          {
            "name": "projectId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Erfolgreich",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "status": { "type": "string" },
                      "createdAt": { "type": "string", "format": "date-time" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createDeployment",
        "summary": "Startet ein neues Deployment",
        "parameters": [
          {
            "name": "projectId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "201": {
            "description": "Deployment gestartet"
          }
        }
      }
    },
    "/projects/{projectId}/envs": {
      "get": {
        "operationId": "getEnvs",
        "summary": "Listet Umgebungsvariablen f端r ein Projekt auf",
        "parameters": [
          {
            "name": "projectId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Liste der Umgebungsvariablen",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {},
                  "additionalProperties": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "/projects/{projectId}/envs/{key}": {
      "put": {
        "operationId": "setEnv",
        "summary": "Setzt eine Umgebungsvariable f端r ein Projekt",
        "parameters": [
          {
            "name": "projectId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "key",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "value": { "type": "string" }
                },
                "required": ["value"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Variable gesetzt"
          }
        }
      }
    },
    "/deployments/{deploymentId}/logs": {
      "get": {
        "operationId": "getLogs",
        "summary": "Holt Logs f端r ein Deployment",
        "parameters": [
          {
            "name": "deploymentId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Log-Daten",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "logs": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
