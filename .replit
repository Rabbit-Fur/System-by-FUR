language = "python"
run = "python run.py"

entrypoint = "run.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "run.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

